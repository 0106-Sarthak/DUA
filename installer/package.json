{
  "name": "installer",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourcompany.installer",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "main.js",
      "ipc.js",
      "preload.js",
      "renderer/**",
      "scripts/**",
      "packaged-app/**"
    ],
    "asarUnpack": [
      "scripts/**",
      "packaged-app/**"
    ]
  }
}
